{% extends "layout.njk" %}



{% block head %}
    <title>Gym Manager</title>
    <link rel="stylesheet" href="../styles.css">
{% endblock head %}



{% block content %}

<div class="card table-container">
    <table width="100%">
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Serviços</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
            <tr>
                <td>
                    <span style="background-image: url({{instructor.avatar_url}})">
                    </span>
                    {{ instructor.name }}
                </td>
                <td>{{ instructor.services }}</td>
                <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}